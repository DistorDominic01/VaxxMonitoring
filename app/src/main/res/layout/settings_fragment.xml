<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@drawable/bgprofile">
 <LinearLayout
     android:id="@+id/layoutLogin"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:orientation="vertical"
     android:layout_marginTop="20dp">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="50dp"
         android:layout_marginTop="10dp"
         android:layout_marginEnd="50dp"
         android:layout_marginBottom="5dp"
         android:gravity="center"
         android:padding="1dp"
         android:text="SETTINGS"
         android:textColor="@color/white"
         android:textSize="25dp"
         android:textStyle="bold" />

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:layout_marginStart="10dp"
         android:layout_marginTop="10dp"
         android:layout_marginEnd="10dp"
         android:layout_marginBottom="10dp"
         android:drawablePadding="20dp"
         android:background="#30ffffff"
         android:drawableLeft="@drawable/ic_baseline_settings_24"
         android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
         android:hint="Settings and Privacy"
         android:padding="20dp"
         android:textColor="@color/white"
         android:textColorHint="@color/white" />

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:layout_margin="10dp"
         android:drawablePadding="20dp"
         android:background="#30ffffff"
         android:drawableLeft="@drawable/ic_baseline_help_24"
         android:hint="Help and Support"
         android:padding="20dp"
         android:textColor="@color/white"
         android:textColorHint="@color/white"
         android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"/>

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:layout_margin="10dp"
         android:drawablePadding="20dp"
         android:background="#30ffffff"
         android:drawableLeft="@drawable/ic_baseline_brightness_3_24"
         android:hint="Display and Accessibility"
         android:padding="20dp"
         android:textColor="@color/white"
         android:textColorHint="@color/white"
         android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"/>

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:layout_margin="10dp"
         android:drawablePadding="20dp"
         android:background="#30ffffff"
         android:drawableLeft="@drawable/ic_baseline_activitylog_24"
         android:hint="Activity Log"
         android:padding="20dp"
         android:textColor="@color/white"
         android:textColorHint="@color/white"
         android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"/>

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:layout_margin="10dp"
         android:drawablePadding="20dp"
         android:background="#30ffffff"
         android:drawableLeft="@drawable/ic_baseline_message_24"
         android:hint="Comments"
         android:padding="20dp"
         android:textColor="@color/white"
         android:textColorHint="@color/white"
         android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"/>

     <Button
       android:id="@+id/buttonLogout"
       android:text="SIGN OUT"
       android:layout_width="300dp"
       android:layout_height="40dp"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="10dp"
       android:layout_marginBottom="5dp"
       android:background="@drawable/rounded_edittext2"
       android:textAlignment="center"
       android:textColor="@color/white"
       android:textColorHint="#BDBDBD"/>

 </LinearLayout>


  </RelativeLayout>

